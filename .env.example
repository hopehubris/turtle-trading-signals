# Server Configuration
PORT=3001
NODE_ENV=development

# Database
DB_PATH=data/signals.db

# Data Fetcher
# Leave blank to use Yahoo Finance (free)
# Set to your Polygon IO API key for premium data
POLYGON_API_KEY=

# Scheduler
# Time for daily scan (24-hour format)
SCAN_TIME=16:00
SCAN_TIMEZONE=America/New_York

# Settings
RUSSELL_THRESHOLD=2000
MIN_VOLUME_FILTER=100000
LIQUIDITY_FILTER=true
TIMEOUT_MINUTES=5
